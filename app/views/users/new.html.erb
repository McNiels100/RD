<%= form_with model: @user do |form| %>
  <div class="form-wrapper">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "First and last name" %>
    <%= form.label :email_address %>
    <%= form.text_field :email_address, placeholder: "E.g firstname.lastname@company.com" %>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Password should be at least 8 characters long." %>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, placeholder: "Enter the password again." %>
    <%= form.label :role %>
    <%= form.select :role, ["admin", "leader", "technician"], prompt: "Select a role" %>
    <% flash.each do |key, message| %>
      <div style="color:red" class="flash <%= key %>"><%= message %></div>
    <% end %>
    <%= form.submit %>
  </div>
<% end %>