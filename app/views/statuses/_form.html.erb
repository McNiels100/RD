<div class="form-wrapper">
  <%= form_with model: @status do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Input exactly how the status should be displayed." %>
    <%= form.label :active %>
    <%= form.select :active, ["false", "true"] %>
    <%= form.submit %>
  <% end %>
</div>
