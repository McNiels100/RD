<div class="form-wrapper">
  <%= form_with model: @pricing do |form| %>
    <%= form.label :part_number %>
    <%= form.text_field :part_number, placeholder: "Input part number" %>
    <%= form.label :price %>
    <%= form.number_field :price, min: 0, step: 0.01, placeholder: "Input price" %>
    <%= form.label :effective_date %>
    <div class="flex-container">
      <%= form.date_select :effective_date, start_year: Date.today.year, end_year: Date.today.year + 10, min: Date.today %>
    </div>
    <%= form.submit %>
  <% end %>
</div>
