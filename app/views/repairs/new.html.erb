<h1>New repair order</h1>
<%= form_with model: @repair do |form| %>
  <div class="form-wrapper">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :email %>
    <%= form.email_field :email %>
    <%= form.label :phone_number, "Phone" %>
    <%= form.telephone_field :phone_number, class: "new-input" %>
    <%= form.label :brand %>
    <%= form.select :brand, ["Apple", "Samsung", "OnePlus", "Sony"]%>
    <%= form.label :device_type %>
    <%= form.select :device_type, ["phone", "tablet", "console", "accessory", "hardware"]%>
    <%= form.label :error_description %>
    <%= form.text_area :error_description %>
    <%= form.label :imei %>
    <%= form.text_field :imei %>
    <%= form.label :serial %>
    <%= form.text_field :serial %>
    <%= form.label :model %>
    <%= form.text_field :model %>
    <% flash.each do |key, message| %>
      <div style="color:red" class="flash <%= key %>"><%= message %></div>
    <% end %>
    <%= form.submit %>
  </div>
<% end %>

<% cache @devices do %>
  <table class="index-table">
    <tr>
      <th>Brand</th>
      <th>Device type</th>
      <th>TAT neutral</th>
      <th>TAT unsatisfied</th>
      <th>TAT very unsatisfied</th>
      <th>Created</th>
      <th>Last update</th>
    </tr>
    <% @devices.each do |device| %>
      <tr>
        <td>
          <%= device.brand  %>
        </td>
        <td>
          <%= device.device_type.upcase %>
        </td>
        <td>
          <%= device.TAT_neutral %>
        </td>
         <td>
          <%= device.TAT_unsatisfied %>
        </td>
        <td>
          <%= device.TAT_very_unsatisfied %>
        </td>
        <td>
          <%= device.created_at %>
        </td>
        <td>
          <%= device.updated_at %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
