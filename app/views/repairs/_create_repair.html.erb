<div class="form-wrapper">
  <%= form_with model: @repair do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :email %>
    <%= form.email_field :email %>
    <%= form.label :phone_number, "Phone" %>
    <%= form.telephone_field :phone_number, class: "new-input" %>
    <%= form.label :brand %>
    <%= form.select :brand, @brands, include_blank: true %>
    <%= form.label :device_type %>
    <%= form.select :device_type, @device_types, include_blank: true %>
    <%= form.label :error_description %>
    <%= form.text_area :error_description %>
    <%= form.label :imei %>
    <%= form.text_field :imei %>
    <%= form.label :serial %>
    <%= form.text_field :serial %>
    <%= form.label :model, "Model name" %>
    <%= form.text_field :model %>
    <%= form.label :model_code %>
    <%= form.text_field :model_code %>
    <%= form.submit %>
  <% end %>
</div>
