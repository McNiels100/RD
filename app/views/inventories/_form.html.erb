<div class="form-wrapper">
  <%= form_with model: @inventory do |form| %>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Input description" %>
    <%= form.label :imei %>
    <%= form.text_field :imei, placeholder: "Input IMEI" %>
    <%= form.label :serial %>
    <%= form.text_field :serial, placeholder: "Input serial" %>
    <%= form.label :location %>
    <%= form.text_field :location, placeholder: "Input location" %>
    <%= form.submit %>
  <% end %>
</div>
