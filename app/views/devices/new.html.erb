<%= form_with model: @device do |form| %>
  <div class="form-wrapper">
    <%= form.label :brand %>
    <%= form.text_field :brand, placeholder: "Input exactly how the brand is spelled." %>
    <%= form.label :device_type %>
    <%= form.text_field :device_type, placeholder: "Input whether the device is a phone, tablet, console, wearable etc..." %>
    <%= form.label :tat_neutral %>
    <%= form.text_field :tat_neutral, placeholder: "Input how many working days it takes for a repair to become YELLOW in TAT." %>
    <%= form.label :tat_unsatisfied %>
    <%= form.text_field :tat_unsatisfied, placeholder: "Input how many working days it takes for a repair to become ORANGE in TAT." %>
    <%= form.label :tat_very_unsatisfied %>
    <%= form.text_field :tat_very_unsatisfied, placeholder: "Input how many working days it takes for a repair to become RED in TAT." %>
    <% flash.each do |key, message| %>
      <div style="color:red" class="flash <%= key %>"><%= message %></div>
    <% end %>
    <%= form.submit %>
  </div>
<% end %>