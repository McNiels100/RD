<table class="index-table">
  <tr>
    <th>Description</th>
    <th>Unit price</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>
  <% @repair_items.each do |item| %>
    <tr>
      <td>
        <%= item.description  %>
      </td>
      <td>
        <%= item.unit_price %>
      </td>
      <td>
        <%= item.created_at %>
      </td>
      <td>
        <%= item.updated_at %>
      </td>
    </tr>
  <% end %>
</table>
